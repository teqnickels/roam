<% include partials/header %>
<% include partials/nav %>

<a href="<%= user_id %>/edit-profile/"<button class="edit-profile">Edit Profile</button></a>
<h1>
  Hello,
  <% if(name) { %>
     <%= name %>
     <% } %>
</h1>

<p>
  Member since:
  <% if(member_since) { %>
     <%= moment(member_since).format('MMMM YYYY') %>
     <% } %>
</p>

<p>
  <% if(collection[0].title !== null) { %>
    <ul>
        <% collection.forEach(function(blog) { %>
            <a href="/profile/<%= user_id %>/<%= blog.id %>"><li><%= blog.title %></li></a>
        <% }); %>
    </ul>
     <% } else {%>
        <h3> You haven't added any blogs yet. Add your first blog <a href="#">here</a></h3>
     <% } %> 
</p>



<% include partials/footer %>
